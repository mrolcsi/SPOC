<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SPOC" parent="Theme.AppCompat.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@android:color/transparent</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/background_material_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/background_material_light</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/background_material_light</item>

        <item name="windowActionBar">false</item>

        <item name="alertDialogTheme">@style/Theme.SPOC.AlertDialog</item>
    </style>

    <style name="Theme.SPOC.Fullscreen"
           parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
        <item name="alertDialogTheme">@style/Theme.SPOC.AlertDialog</item>
    </style>

    <style name="Theme.SPOC.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/background_material_light</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>